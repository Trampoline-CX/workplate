{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "lib": ["es2019"],
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es2017",
  },
  "include": ["src"]
}
